
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read public data
    match /users/{userId} {
      allow read: if request.auth != null;
      // Allow a user to update their own document (e.g., their name)
      // but not their points, role, or house.
      allow update: if request.auth.uid == userId
                    && request.resource.data.keys().hasOnly(['name', 'id', 'customId', 'email', 'points', 'houseId', 'role', 'avatar'])
                    && request.resource.data.name != resource.data.name;
    }

    match /users/{userId}/point_history/{historyId} {
      // Allow a user to read their own point history
      allow read: if request.auth.uid == userId;
    }

    // Allow authenticated users to read house data
    match /houses/{houseId} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to read metadata (for user counter)
    match /metadata/{docId} {
      allow read: if request.auth != null;
    }
  }
}
